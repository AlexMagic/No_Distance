<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    
	    <ImageView android:id="@+id/friend_head"
	        android:layout_width="35dp"
	        android:layout_height="35dp"
	        android:src="@drawable/btn_entertainment_selector"
	        android:alpha="0.8"
	        android:layout_margin="8dp"/>
    
    	<TextView android:id="@+id/friend_name"
    	    android:layout_height="wrap_content"
    	    android:layout_width="wrap_content"
    	    android:text="我"
    	    android:layout_toRightOf="@id/friend_head"
    	    android:layout_margin="8dp"/>
	    
	    <TextView android:id="@+id/moment_txt"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:text="	哈哈哈哈哈哈哈哈哈哈哈哈哈....哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈....哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
	        android:layout_below="@id/friend_name"
	        android:layout_marginLeft="60dp"
	        android:maxLines="2"/>
	    
	    <TextView android:id="@+id/moment_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="13:00"
	        android:layout_alignParentRight="true"
	        android:layout_margin="8dp"/>
	    
	    
	    
	    
    </RelativeLayout>
    
    <View  
	       android:layout_width="fill_parent"
	       android:layout_height="1dip"
	       android:layout_marginTop="10dp"
	       android:layout_marginLeft="8dip"
	       android:layout_marginRight="8dip"
	       android:layout_marginBottom="3dp"
	       android:background="#20333333"/>
</LinearLayout>