<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout android:orientation="horizontal"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
				
                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/newslist_item_go_detail"
                    android:rotation="180"
                    android:layout_centerVertical="true" />
                
	            <TextView android:id="@+id/test"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:padding="5dp"
	                    android:text="路线"
	                    android:textSize="20sp"
	                    android:textColor="#999999"
	                    android:layout_toRightOf="@id/btn_back"/>
	            
	            <Button android:id="@+id/search"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:background="@drawable/abc_ic_search"
	                 android:layout_alignParentRight="true"/>
			</RelativeLayout>
			
	<RelativeLayout android:id="@+id/login_div"  
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"  
        android:padding="15dip" 
        android:layout_margin="15dip">  
        <corners android:topLeftRadius="20dp"   
              	 android:topRightRadius="20dp"    
            	 android:bottomRightRadius="20dp"   
            	 android:bottomLeftRadius="20dp"/> 
	     <LinearLayout  
	          android:layout_width="match_parent"
	   		  android:layout_height="wrap_content" 
	   		  android:orientation="vertical">    
	    	 <EditText
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:hint="我的位置" />   
	    	 <EditText
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:hint="请输入终点" /> 
	     </LinearLayout> 
    
    </RelativeLayout>

	<RelativeLayout android:id="@+id/login_div"  
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"  
        android:padding="5dip" 
        android:layout_margin="30dip"
        android:background="@drawable/border">  
	
	    <TextView
	        android:id="@+id/test"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/btn_goto_residenmenu"
	        android:padding="5dp"
	        android:text="常用路径"
	        android:textColor="#000000"
	        android:textSize="20sp" />

	    <Button
	        android:id="@+id/btn_search_line"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/newslist_item_go_detail" />
	</RelativeLayout>
     
</LinearLayout>