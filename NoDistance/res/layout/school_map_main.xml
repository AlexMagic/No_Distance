<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:background="@color/white">

	    <ListView
	        android:id="@id/android:list"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:drawSelectorOnTop="false"
	        android:scrollbars="vertical"/>

      	<LinearLayout android:orientation="horizontal"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border"
	            android:padding="5dip"
	            android:layout_marginTop="450dp">
	            
      	    <Button android:id="@+id/btn_fujin"
	                 android:layout_width="fill_parent"
	                 android:layout_height="wrap_content"
	                 android:text="附近      "
	                 android:drawableLeft="@drawable/fujin"
	                 android:paddingLeft="10dp"
	                 android:background="@android:color/white"
	                 android:layout_weight="1" />
      	    <View  
    			android:layout_width="1dip" 
   			 	android:layout_height="match_parent"
    			android:background="#000000"
    			android:layout_gravity="center_horizontal" />
      	    <Button android:id="@+id/btn_luxian"
	                 android:layout_width="fill_parent"
	                 android:layout_height="wrap_content"
	                 android:text="路线      "
	                 android:drawableLeft="@drawable/luxian"
	                 android:paddingLeft="10dp"
	                 android:background="@android:color/white"
	                 android:layout_weight="1" />
      	    <View  
    			android:layout_width="1dip" 
   			 	android:layout_height="match_parent"
    			android:background="#000000"
    			android:layout_gravity="center_horizontal" />
      	    <Button android:id="@+id/btn_daohang"
	                 android:layout_width="fill_parent"
	                 android:layout_height="wrap_content"
	                 android:text="导航      "
	                 android:drawableLeft="@drawable/daohang"
	                 android:paddingLeft="10dp"
	                 android:background="@android:color/white"
	                 android:layout_weight="1" />
      	    <View  
    			android:layout_width="1dip" 
   			 	android:layout_height="match_parent"
    			android:background="#000000"
    			android:layout_gravity="center_horizontal" />
      	    <Button android:id="@+id/btn_wode"
	                 android:layout_width="fill_parent"
	                 android:layout_height="wrap_content"
	                 android:text="我的     "
	                 android:drawableLeft="@drawable/wode"
	                 android:paddingLeft="10dp"
	                 android:background="@android:color/white"
	                 android:layout_weight="1" />
	    </LinearLayout>
</RelativeLayout>